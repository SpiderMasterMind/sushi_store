include _mixins 
doctype html 
html
	head
		title Sushi Restaurant Website
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
		+stylesheet_link_tag('main')
		+javascript_include_tag("vendor/all")
		+javascript_include_tag("handlebars_templates")

		body
		header
			a(class="logo" href="#")
				img(src="images/logo.png")
			div.cart
				a(href="#")
					span.left Shopping Cart
					span.right
						span.count
		block content

	+javascript_include_tag("application")
	+javascript_include_tag("models/menu_item")
	+javascript_include_tag("collections/menu_items", "collections/cart_items")
	+javascript_include_tag("views/menu_items", "views/cart_view", "views/cart_footer", "views/item_detail")
	script(type="text/javascript").
		App.menuItems = new MenuItems(!{JSON.stringify(menuData)});	
		App.init();
	+javascript_include_tag("router")
