<div id="checkout">
	<div class="img_top"></div>
		<section>
			<h1>Order Details</h1>
			<table>
				<thead>
					<tr>
						<th>Item</th>
						<th></th>
						<th>Quantity</th>
						<th>Price</th>
					</tr>
				</thead>
				<tbody>
					{{#each cartItems}}
					<tr data-id="{{id}}">
						<td><img src="{{cover}}" alt="cart-item"></td>
						<td>{{name}}</td>
						<td>
							<span class="quantity_modifier">
								<i class="fa fa-minus" aria-hidden="true"></i>
							</span>
							<p>{{quantity}}</p>
							<span class="quantity_modifier">
								<i class="fa fa-plus" aria-hidden="true"></i>
							</span>
						</td>
						<td>{{price}}</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
			<p>Total: <span class="total">{{price}}</span></p>
			<footer>
				<a href="/">Cancel order</a>
				<form action="/" method="post">
					<input type="submit" value="ORDER NOW!">
				</form>
			</footer>
		</section>
	<div class="img_bottom"></div>
</div>
